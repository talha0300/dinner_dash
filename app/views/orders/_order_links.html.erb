<% if policy(Item).create? && view==="order"%>
  <% if order[:status]==="paid"%>
  <tr>
    <th></th>
    <th><u><%= link_to 'Mark as Complete',mark_complete_order_order_path(order[:id]),method: :put%></u></th>
    <th></th>
  </tr>
  <%end%>
  <%if order[:status]==="ordered"%>
  <tr>
    <th></th>
    <th><u><%= link_to 'Mark as Paid',mark_paid_order_order_path(order[:id]),method: :put%></u></th>
    <th></th>
  </tr>
  <%end%>

  <%if order[:status]==="ordered" or order[:status]==="paid"%>
  <tr>
    <th></th>
    <th><u><%= link_to 'Cancel Order',cancel_order_order_path(order[:id]),method: :put%></u></th>
    <th></th>
  </tr>
  <%end%>

<%end%>
