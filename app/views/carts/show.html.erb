<h1>Your Cart</h1>
<table class="table table-striped">
  <thead>
    <tr>
      
      <th>Item</th>
      <th>Quantity</th>
      <th></tr>
  </thead>
  <tbody>
    <% @cart_items.each do |item|%>
      <tr>

        <th> <strong> <%= link_to item.title,item_path(item.id)%> </strong></th>
        <th><%= item.quantity%></th>
        <th> <%= link_to 'Remove', item_cart_path(item_id:item.id), method: :delete, data: { confirm: 'Are you sure?' } ,style:'color:red',remote: true,class:"delete"%></th>
      </tr>
    <%end%>
  </tbody>


</table>
