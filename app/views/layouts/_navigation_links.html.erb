<%# add navigation links to this file %>




<% if user_signed_in? %>

  <span class="navbar-brand">signed in as <strong><%=current_user.user_name%></strong></span>  <%= link_to "sign_out",destroy_user_session_path, class: 'navbar-brand'%>
  <% if policy(Item.new).create? %>
    <%= link_to "Add Item", new_item_path, class: 'navbar-brand' %>
    <%= link_to "Categories", categories_path, class: 'navbar-brand' %>
    <%= link_to "All Orders", all_orders_orders_path(orders_type:"all"), class: 'navbar-brand' %>
  <% else %>
    <%= link_to "MY Orders", orders_path,class:'navbar-brand'%>
  <% end %>


<% else %>
  <%= link_to "sign In",new_user_session_path, class: 'navbar-brand',"data-turbolinks" => "false"%>  <%= link_to "sign_up",new_user_registration_path, class: 'navbar-brand',"data-turbolinks" => "false"%>
<% end %>



