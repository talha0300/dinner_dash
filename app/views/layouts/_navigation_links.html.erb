<%# add navigation links to this file %>
<% if policy(:home).show? %>
  <%= link_to 'show', home_path(id:current_user.id), class: 'navbar-brand' %>
<% end %>



<% if user_signed_in? %>

  <span class="navbar-brand">signed in as</span> <%= link_to current_user.user_name, user_path(current_user.id), class: 'navbar-brand' %> Not you <%= link_to "sign_out",destroy_user_session_path, class: 'navbar-brand'%>
  <% if policy(Item.new).create? %>
    <%= link_to "Add Item", new_item_path, class: 'navbar-brand' %>
    <%= link_to "Assign Category", new_categorization_path, class: 'navbar-brand' %>
  <% end %>
<% else %>
  <%= link_to "sign In",new_user_session_path, class: 'navbar-brand',"data-turbolinks" => "false"%> Or <%= link_to "sign_up",new_user_registration_path, class: 'navbar-brand',"data-turbolinks" => "false"%>
<% end %>



<%= link_to(cart_path(session[:shopping_cart]['id'])) do %>
  <span class="fa-stack navbar-brand">
    <i class="fa fa-square-o fa-stack-2x"></i>
    <i class="fa fa-shopping-cart fa-stack-1x"></i>
  </span>
<%end%>
